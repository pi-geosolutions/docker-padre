<overrides>
	<import file="/WEB-INF/server-props-overrides.xml"/>
		<properties>
                <db.user>geonetwork</db.user>
                <db.pass>geonetwork</db.pass>
                <db.dbname>jdbc:postgresql://pg:5432/geonetwork</db.dbname>
                
                <charts-db.user>geonetwork</charts-db.user>
                <charts-db.pass>geonetwork</charts-db.pass>
        </properties>
        
        <file name=".*/WEB-INF/config.xml">
       			<addXML xpath="appHandler"><param name="geonetwork.dir" value="/home/jean/tomcat7/data/bi-risk-gn2_10-datadir" /></addXML>
                <replaceXML xpath="resources">
                        <resource enabled="true">
                                <name>main-db</name>
                                <provider>jeeves.resources.dbms.ApacheDBCPool</provider>
                                <config>
                                        <user>${db.user}</user>
                                        <password>${db.pass}</password>
                                        <!-- we use org.postgis.DriverWrapper in place of
                                                 org.postgresql.Driver to support both postgresql and postgis -->
                                  <driver>org.postgis.DriverWrapper</driver>
                                        <!--                                    
                                                jdbc:postgresql:database
                                                jdbc:postgresql://host/database
                                                jdbc:postgresql://host:port/database
                                        
                                                or if you are using postgis and want the spatial index loaded
                                                into postgis

                                                jdbc:postgresql_postGIS://host:port/database
                                        
                                        -->
                                  <url>${db.dbname}</url>
                                        <poolSize>10</poolSize>
                                <validationQuery>SELECT 1</validationQuery>
                                </config>
                        </resource>
<!--                        <resource enabled="true">
                                <name>gm_risk_geodata</name>
                                <provider>jeeves.resources.dbms.ApacheDBCPool</provider>
                                <config>
									<user>${charts-db.user}</user>
									<password>${charts-db.pass}</password>
									<driver>org.postgis.DriverWrapper</driver>
									<url>jdbc:postgresql://localhost:5432/gm_risk_geodata</url>
									<poolSize>10</poolSize>
                                	<validationQuery>SELECT 1</validationQuery>
                                </config>
                        </resource>
    -->                    
                </replaceXML>   
        </file>
       	<file name=".*/WEB-INF/config-gui.xml">
			<replaceAtt xpath="client" attName="widget" value="true" />
			<replaceAtt xpath="client" attName="url"
				value="../../apps/geoportal/index.html" />
			<replaceAtt xpath="client" attName="createParameter" value="#create" />
			<replaceAtt xpath="client" attName="parameters"
				value="hl=fre" />
	<!-- 	<replaceAtt xpath="client" attName="parameters"
			value="extent=-17,13,-13.7,14&amp;hl=fre" />
			-->
		</file>
	
</overrides>
